{
  "name": "share-drop-server",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && npm run database:migrate && tsx watch --env-file=.env src/server.js",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "services:up": "docker compose -f src/infra/compose.yaml up -d",
    "services:stop": "docker compose -f src/infra/compose.yaml stop",
    "services:down": "docker compose -f src/infra/compose.yaml down",
    "services:wait:database": "tsx src/infra/scripts/wait-for-database.js",
    "database:generate": "drizzle-kit generate",
    "database:migrate": "drizzle-kit migrate",
    "database:studio": "drizzle-kit studio",
    "test": "npm run services:up && npm run services:wait:database && npm run database:migrate && concurrently --names Dev,Vitest --hide Dev --kill-others --success command-Vitest \"tsx watch --env-file=.env src/server.ts\" \"vitest run --reporter=verbose\"",
    "test:watch": "vitest",
    "lint:eslint:check": "eslint .",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "description": "",
  "devDependencies": {
    "@eslint/js": "9.33.0",
    "@types/async-retry": "^1.4.9",
    "@types/node": "24.2.1",
    "@types/pg": "8.15.5",
    "concurrently": "9.2.0",
    "drizzle-kit": "0.31.4",
    "eslint": "9.33.0",
    "globals": "16.3.0",
    "prettier": "3.6.2",
    "ts-node": "10.9.2",
    "tsx": "4.20.4",
    "typescript": "5.9.2",
    "typescript-eslint": "8.39.1",
    "vitest": "3.2.4"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.864.0",
    "@aws-sdk/lib-storage": "3.864.0",
    "@fastify/cors": "11.1.0",
    "@fastify/multipart": "9.0.3",
    "@fastify/swagger": "9.5.1",
    "@fastify/swagger-ui": "5.2.3",
    "async-retry": "1.3.3",
    "dotenv": "17.2.1",
    "drizzle-orm": "0.44.4",
    "fastify": "5.5.0",
    "fastify-type-provider-zod": "5.0.3",
    "pg": "8.16.3",
    "zod": "4.0.17"
  }
}
